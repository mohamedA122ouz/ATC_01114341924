@{
    ViewBag.Title = "Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust path if needed
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <img src="~/images/404.png" alt="Page not found" class="img-fluid mb-4" style="max-height: 300px;" />

            <h1 class="display-4 fw-bold text-primary">Oops! Page Not Found</h1>
            <p class="lead text-secondary mt-3">
                The page you’re looking for doesn’t exist or was moved.
            </p>

            <a href="~/" class="btn btn-primary mt-4">
                Go Back Home
            </a>
        </div>
    </div>
</div>
